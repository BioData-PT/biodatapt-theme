{#
/**
 * @file
 * Template for a Badge component.
 *
 * Available config:
 * - tag: The HTML tag to use for the bade. Defaults to span.
 * - color: bg-primary | bg-secondary | bg-success | bg-info | bg-warning | bg-danger | bg-light | bg-dark | bg-black | bg-white | bg-body | bg-transparent | bg-opacity-10 | bg-opacity-25 | bg-opacity-50 | bg-opacity-75 | bg-opacity-100 | bg-gradient
 * - utility_classes: An array of utility classes.
 * - content: The content of the badge.
 * - url: if anchor add a url, html_tag will be set to a automatically.
 */
#}

{# {% set color = color ?? 'bg-secondary' %}

{% set classes = [
  'badge',
	background_color,
	text_color
]|merge(utility_classes ? utility_classes : []) %}

{% set tag = tag ?? 'span' %}

{% if url %}
	{% set tag = 'a' %}
	{% set url = url|render %}
{% endif %}

{% if content %}
	<{{tag}} {{ url ? 'href=' ~ url }} class="{{ classes|join(' ') }}">

		{% block content %}
			{{ content }}
		{% endblock %}

	</{{tag}}>
{% endif %} #}
