{
	"name": "vartheme_bs5",
	"description": "Base theme for Varbase standard websites. Based on Bootstrap 5 framework using SASS, and extending Radix theme.",
	"private": true,
	"engines": {
		"npm": ">= 6.0",
    "yarn": ">= 1.6",
    "node": ">= 16.0"
	},
	"scripts": {
		"postinstall": "find node_modules/ -name '*.info' -type f -delete",
		"dev": "mix",
		"watch": "mix watch",
		"watch-poll": "mix watch -- --watch-options-poll=1000",
		"hot": "mix watch --hot",
		"production": "mix --production",
		"storybook": "start-storybook"
	},
	"devDependencies": {
		"browser-sync": "^2.27.7",
		"browser-sync-webpack-plugin": "^2.3.0",
