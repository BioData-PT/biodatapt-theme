		"laravel-mix-stylelint": "^1.0.0",
		"node-sass": "^7.0.0",
		"postcss-scss": "^4.0.2",
		"sass": "^1.32.11",
		"sass-loader": "^11.0.1",
		"stylelint": "^14.1.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-recess-order": "^3.0.0",
		"stylelint-config-standard": "^24.0.0",
		"stylelint-webpack-plugin": "^3.1.0"
	},
	"dependencies": {
		"bootstrap": "~5",
		"@popperjs/core": "^2.9.2",
